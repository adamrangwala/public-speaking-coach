{
  "build": {
    "builder": "nixpacks",
    "config": {
      "buildCommand": "pip install -r requirements.txt"
    }
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT"
  },
  "env": {
    "DEBUG": {
      "description": "Enable debug mode",
      "value": "true"
    },
    "DATABASE_URL": {
      "description": "Database connection string",
      "value": "sqlite:///./app.db"
    }
  }
}